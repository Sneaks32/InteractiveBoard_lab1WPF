<Window x:Class="InteractiveBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interactive Board" Height="600" Width="900">

    <Grid>
        <StackPanel Orientation="Vertical" Background="#E0E0E0" Width="60" HorizontalAlignment="Left">
            <Button Content="🖌️" FontSize="24" Margin="5" Height="50"/>
            <Button Content="✏️" FontSize="24" Margin="5" Height="50"/>
            <Button Content="📐" FontSize="24" Margin="5" Height="50"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Background="#E0E0E0" Width="60" HorizontalAlignment="Right">
            <Button Content="📁" FontSize="24" Margin="5" Height="50"/>
            <Button Content="💾" FontSize="24" Margin="5" Height="50"/>
            <Button Content="🖨️" FontSize="24" Margin="5" Height="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Background="#E0E0E0" Height="60" VerticalAlignment="Bottom">
            <Button Content="🖋️" FontSize="24" Margin="5" Width="50"/>
            <Button Content="✂️" FontSize="24" Margin="5" Width="50"/>
            <Button Content="🗑️" FontSize="24" Margin="5" Width="50"/>
            <Button Content="🎨" FontSize="24" Margin="5" Width="50" Click="ColorButton_Click"/>
        </StackPanel>

        <InkCanvas Name="drawingCanvas" Background="White" Margin="70,10,70,70"/>
    </Grid>
</Window>
